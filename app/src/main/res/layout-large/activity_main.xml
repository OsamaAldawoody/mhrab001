                    android:textDirection="ltr"
                    android:textSize="60dp" />

                <TextView
                    android:id="@+id/duhrIqama"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="12:40"
