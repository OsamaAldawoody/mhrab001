<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/back_text"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/arrowforward_white" />

            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_back"
                android:text="@string/Tones_settings"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/tvChooseAthanSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ivPlayAthan"
                android:padding="@dimen/padding"
                android:text="تغيير صوت الأذان"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivPlayAthan"
                android:layout_width="@dimen/height"
                android:layout_height="@dimen/height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/btnChAthanSound"
                android:background="@color/back_text"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_play" />

            <Button
                android:id="@+id/btnChAthanSound"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/back_text"
                android:text="اختر"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/tvChooseIqamaSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ivPlayIqama"
                android:padding="@dimen/padding"
                android:text="تغيير صوت اللإقامة"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivPlayIqama"
                android:layout_width="@dimen/height"
                android:layout_height="@dimen/height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/btnChIqamaSound"
                android:background="@color/back_text"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_play" />

            <Button
                android:id="@+id/btnChIqamaSound"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/back_text"
                android:text="اختر"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/tvChooseCloseSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ivPlayClose"
                android:padding="@dimen/padding"
                android:text="تغيير صوت تنبيه إغلاق الهاتف"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivPlayClose"
                android:layout_width="@dimen/height"
                android:layout_height="@dimen/height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/btnChCloseSound"
                android:background="@color/back_text"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_play" />

            <Button
                android:id="@+id/btnChCloseSound"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/back_text"
                android:text="اختر"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dadada" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/back_text"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize" />
</RelativeLayout>