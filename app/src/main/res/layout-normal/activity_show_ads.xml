<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_back"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl"
    tools:context="com.newsolution.almhrab.Activity.ShowAdsActivity">

    <TextView
        android:id="@+id/dateToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="السبت | 5 ديسمبر 2015 | 24 صفر1437 هـ"
        android:textColor="@color/white"
        android:layoutDirection="rtl"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dateToday">

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:text="11:25"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/amPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="ص"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="visible" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="لنقرأ فنحن أمة تقرأ"
        android:textColor="@color/white"
        android:textSize="28dp" />

    <RelativeLayout
        android:id="@+id/llLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvName"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_rect"
        android:orientation="vertical">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vvAdsVideo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivAdsImage"
            android:background="#362417"
            android:scaleType="fitXY"
            android:src="@drawable/imam"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:lineSpacingMultiplier="1.1"
            android:textSize="24dp"
            android:id="@+id/tvAdsText"
            android:padding="@dimen/padding"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/name_back"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="بلال بن رباح"
        android:textColor="@color/span"
        android:textSize="18dp" />

</RelativeLayout>
